<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".GetSum">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/onlyEvent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="Event-Only"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
        <RadioButton
            android:id="@+id/genSum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="General Copy"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </LinearLayout>

    <Spinner
        android:id="@+id/eventList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/decline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Decline"
            android:drawableLeft="@drawable/en_cancel_icon"
            android:background="@drawable/en_btn_shape"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:focusable="true"
            android:clickable="true"/>

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <!-- Proceed Button -->
        <Button
            android:id="@+id/proceed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/en_next_icon"
            android:background="@drawable/en_btn_shape"
            android:text="Proceed"
            tools:ignore="HardcodedText,RtlHardcoded"
            android:focusable="true"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>